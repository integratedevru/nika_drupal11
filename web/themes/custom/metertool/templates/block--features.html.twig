{#
/**
 * @file
 * Template for the features block.
 */
#}
<div class="features-block">
  <div class="layout-container">
    <div class="features-grid">
      <div class="feature-item">
        <div class="progress-circle animate" data-once="features">
          <svg viewBox="0 0 100 100">
            <circle class="circle-bg" cx="50" cy="50" r="43"></circle>
            <circle class="circle-white-sector" cx="50" cy="50" r="43" stroke-dashoffset="240"></circle>
            <circle class="circle-progress" cx="50" cy="50" r="43" stroke-dasharray="282.74" stroke-dashoffset="141.37"></circle>
          </svg>
          <div class="progress-text">82%</div>
        </div>
        <p class="feature-title">Больше функционал</p>
      </div>

      <div class="feature-item">
        <div class="progress-circle">
          <svg viewBox="0 0 100 100">
            <circle class="circle-bg" cx="50" cy="50" r="43"/>
            <circle class="circle-white-sector" cx="50" cy="50" r="43" stroke-dasharray="250" stroke-dashoffset="200"></circle>
            <circle class="circle-progress" cx="50" cy="50" r="43" stroke-dasharray="250" stroke-dashoffset="{{ 250 * (1 - 0.40) }}"/>
          </svg>
          <div class="progress-text">68%</div>
        </div>
        <p class="feature-title">Лучше производительность</p>
      </div>

      <div class="feature-item">
        <div class="progress-circle">
          <svg viewBox="0 0 100 100">
            <circle class="circle-bg" cx="50" cy="50" r="43"/>
            <circle class="circle-white-sector" cx="50" cy="50" r="43" stroke-dasharray="270" stroke-dashoffset="220"></circle>
            <circle class="circle-progress" cx="50" cy="50" r="43" stroke-dasharray="270" stroke-dashoffset="{{ 270 * (1 - 0.60) }}"/>
          </svg>
          <div class="progress-text">90%</div>
        </div>
        <p class="feature-title">Пользовательский интерфейс</p>
      </div>

      <div class="feature-item">
        <div class="progress-circle">
          <svg viewBox="0 0 100 100">
            <circle class="circle-bg" cx="50" cy="50" r="43"/>
            <circle class="circle-white-sector" cx="50" cy="50" r="43" stroke-dasharray="260" stroke-dashoffset="210"></circle>
            <circle class="circle-progress" cx="50" cy="50" r="43" stroke-dasharray="260" stroke-dashoffset="{{ 260 * (1 - 0.45) }}"/>
          </svg>
          <div class="progress-text">75%</div>
        </div>
        <p class="feature-title">Служба поддержки</p>
      </div>
    </div>
  </div>
</div>
